{% extends 'base.html.twig' %}

{% block title %}Liste des portfolio{% endblock %}

{% block body %}
    <h1>Liste des portfolio</h1>
    {% for message in app.flashes('SuccessDeleteBudget') %}
        <div class="erreur">
            {{ message }}
        </div>
    {% endfor %}
    <div>
        <a href="{{ path('app_portfolio_new') }}"
           class="btn btn-primary" id="btnAjout">
            Ajouter un nouveau portfolio
        </a>
        <a href="{{ path('app_admin') }}"
           class="btn btn-secondary" id="btnRetour">
            Retourner à la liste des fonctionnalités
        </a>
    </div>
    <table class="table tableAdmin">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Détail</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.namePortfolio }}</td>
                <td>
                    <a href="{{ path('app_portfolio_show', {'id': portfolio.id}) }}"
                       class="btn btn-info">
                        Détail
                    </a>
                </td>
                <td>
                    <a href="{{ path('app_portfolio_edit', {'id': portfolio.id}) }}"
                       class="btn btn-primary">
                        <i class="far fa-edit"></i>
                    </a>
                </td>
                <td>
                    {{ include('portfolio/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="erreur">Aucun portfolio trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
