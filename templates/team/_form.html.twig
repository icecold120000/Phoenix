{{ form_start(form) }}
    <div id="screenLeft">
        {{form_label(form.teamName)}}
        <div class="divInput">
            {{form_widget(form.teamName)}}
        </div>
        {% if form_errors(form.teamName) %}
            <div class="erreur">
                {{form_errors(form.teamName)}}
            </div>
        {% endif %}
        {{form_label(form.teamLeader)}}
        <div class="divInput">
            {{form_widget(form.teamLeader)}}
        </div>
        {% if form_errors(form.teamLeader) %}
            <div class="erreur">
                {{form_errors(form.teamLeader)}}
            </div>
        {% endif %}
    </div>
    <div id="screenRight">
        {{form_label(form.teamParent)}}
        <div class="divInput">
            {{form_widget(form.teamParent)}}
        </div>
        {% if form_errors(form.teamParent) %}
            <div class="erreur">
                {{form_errors(form.teamParent)}}
            </div>
        {% endif %}
    </div>
{{ form_end(form) }}
