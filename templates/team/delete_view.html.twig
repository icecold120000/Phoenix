{% extends 'base.html.twig' %}

{% block title %}Suppression d'une équipe {% endblock %}

{% block body %}
    <main>
        <h1>Suppression d'une équipe</h1>

        <h2>Appuyer sur le bouton Supprimer pour supprimer l'équipe choisie : {{ team.teamName }}</h2>

        {% for message in app.flashes('FailedDeleteTeam') %}
            <div class="flash-danger" id="warning">
                <p>{{ message|replace({".":".</br>"})|raw }}</p>
            </div>
        {% endfor %}

        {{ include('team/_delete_form.html.twig') }}
        <div>
            <a href="{{ path('team_index') }}"
               class="btn btn-secondary" id="btnRetourSuppr">
                Revenir à la liste
            </a>
        </div>
    </main>
{% endblock %}