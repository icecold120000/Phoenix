{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <main>
        <div>
            <h1>Inscription</h1>
            <div>
                <h2>Inscrivez-vous d√®s maintenant pour pouvoir vous connecter.</h2>
            </div>
            {% for message in app.flashes('successInscription') %}
                <div class="flash-success">
                    {{ message|replace({".":".</br>"})|raw }}
                </div>
            {% endfor %}
            {% for message in app.flashes('failedInscription') %}
                <div class="erreur">
                    {{ message|replace({".":".</br>"})|raw }}
                </div>
            {% endfor %}
            <section id="formRegister">
                <div class="container-fluid">
                    <div>
                        {{form_start(registrationForm)}}
                        <div id="screenLeft">
                            {{form_label(registrationForm.firstnameUser)}}
                            {% if form_errors(registrationForm.firstnameUser) %}
                                <div class="erreur">
                                    {{form_errors(registrationForm.firstnameUser)}}
                                </div>
                            {% endif %}
                            <div class="divInput">
                                {{form_widget(registrationForm.firstnameUser)}}
                            </div>
                            {{form_label(registrationForm.lastnameUser)}}
                            {% if form_errors(registrationForm.lastnameUser) %}
                                <div class="erreur">
                                    {{form_errors(registrationForm.lastnameUser)}}
                                </div>
                            {% endif %}
                            <div class="divInput">
                                {{form_widget(registrationForm.lastnameUser)}}
                            </div>
                            {{form_label(registrationForm.email)}}
                            {% if form_errors(registrationForm.email) %}
                                <div class="erreur">
                                    {{form_errors(registrationForm.email)}}
                                </div>
                            {% endif %}
                            <div class="divInput">
                                {{form_widget(registrationForm.email)}}
                            </div>
                        </div>
                        <div id="screenRight">
                            {% if form_errors(registrationForm.plainPassword.first)%}
                                <div class="erreur">
                                    {{form_errors(registrationForm.plainPassword.first)}}
                                </div>
                            {% endif %}
                            <div class="divInput">
                                {{form_help(registrationForm.plainPassword)}}
                                {{form_widget(registrationForm.plainPassword)}}
                            </div>
                        </div>
                        {{form_end(registrationForm)}}
                    </div>
                    <div class="row">
                        <div id="divAjout">
                            <button type="submit" class="btn btn-success" form="registerForm">
                                S'inscrire
                            </button>
                            <a href="{{ path('app_login') }}"
                               id="btnRetour" class="btn btn-secondary">
                                Revenir au formulaire de connexion
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}